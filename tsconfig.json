{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/graph-demo/src/*", "packages/graph-core/src/*"],
      "graph-logic": ["packages/graph-core/src/index.ts"],
      "@datafe/graph-vue": ["packages/graph-vue"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["packages"]
}
